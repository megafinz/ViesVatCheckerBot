{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "google"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "object-curly-spacing": [
      "error",
      "always"
    ],
    "require-jsdoc": "off",
    "comma-dangle": [
      "error",
      "never"
    ],
    "max-len": "off",
    "arrow-parens": [
      "error",
      "as-needed"
    ],
    "no-extra-semi": "error",
    "new-cap": [
      "error",
      { "capIsNewExceptions": ["Router"] }
    ]
  }
}
